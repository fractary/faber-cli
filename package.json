{
  "name": "@fractary/cli",
  "version": "0.1.0",
  "description": "Unified CLI for all Fractary tools (faber, forge, helm, codex, argus)",
  "main": "dist/index.js",
  "bin": {
    "fractary": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
